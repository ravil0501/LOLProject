@model SelectModel

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/Items.css">


<div class="container px-lg-5 px-md-3 px-lg-0">
    
    <h4 class="category">Heroes</h4>
    @{
        var heroes = from c in Model.Context.Heroes
                orderby c.NameHero
                select c;
    }
    <div class="image-container">
        @foreach (var hero in heroes)
        {
            <div class="image-box">
                <a href="#" class="open-link" id="info-link-@hero.NameHero" onclick="toggleOverlay('@hero.NameHero')">
                    <img class="heroImage" width="112" height="72" src="data:image/png;base64,@Convert.ToBase64String(hero.ImageHeroIcon)" alt="@hero.NameHero">
                    <p style="font-size:16px; color: #c0c5cc;">@hero.NameHero</p>
                </a>
            </div>
            <div id="overlay-@hero.NameHero" class="overlay">
                <div class="information container col-xl-5 col-md-8 col-sm-10 align-content-center toClose" id="info-@hero.NameHero" style="display: none;">
                    <h2 class="toClose">Все о чемпионе - @hero.NameHero</h2>
                    <img class="col col-10 h-auto toClose" src="data:image/png;base64,@Convert.ToBase64String(hero.ImageHero)" alt="@hero.NameHero">
                    <div class="container col-4 toClose">
                        <h6 class="toClose">Базовые Характеристики</h6>
                        <select class="toClose" asp-for="SelectedValue" name="SelectedValue">
                            level
                            @for (int j = 1; j < 19; j++)
                            {
                                <option value="@j">Level @j</option>
                            }
                        </select>
                       <p>@Model.SelectedValue</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<script src="~/js/HeroScript.js" asp-append-version="true"></script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

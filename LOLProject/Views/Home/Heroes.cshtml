@model LOLProject.Model.LolprojectContext

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/Items.css">
@{
    var height = "70";
    var width = "50";
}
<div class="container px-lg-5 px-md-3 px-lg-0">
    <div class="aboutHero w-@(width)">
        Hello everybody
        lalala
        lalala
        allaala
    </div>
    <h4 class="category">Heroes</h4>
    @{
        var heroes = from c in Model.Heroes
                orderby c.NameHero
                select c;
    }
    <div class="image-container">
        @foreach (var hero in heroes)
        {
            <div class="image-box">
                <a asp-controller="Home" asp-action="HeroesInformation" asp-route-heroName="@Convert.ToString(hero.NameHero)">
                    <img class="itemImage" width="112" height="72" src="data:image/png;base64,@Convert.ToBase64String(hero.ImageHeroIcon)" alt="@hero.NameHero">
                    <p style="font-size:16px; color: #c0c5cc;">@hero.NameHero</p>
                </a>
            </div>
        }
        </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
